@if (prop.Type == typeof(bool))
{
    // Handle boolean property
    <input type="checkbox" name="@prop.Name" />
}
else if (prop.Type == typeof(string))
{
    // Handle string property
    <input type="text" name="@prop.Name" data-val="1" />

}
else if (prop.Type == typeof(int))
{
    // Handle integer property
    <input type="number" name="@prop.Name" />

}
else if (prop.Type == typeof(double))
{
    // Handle double property
    <input type="number" name="@prop.Name" />

}
else if (prop.Type == typeof(DateTime))
{
    // Handle DateTime property
}
